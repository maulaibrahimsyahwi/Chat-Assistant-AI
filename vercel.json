{
  "version": 2,
  "builds": [
    { "src": "frontend/api/**/*.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "frontend/api/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
